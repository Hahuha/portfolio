{{>top}}
{{> section_nav}}
<!-- CONTENU -->
<div class="container">
    <div class="section">
        <!--   Icon Section   --> 
        <div class="row">
            <div class="col s12 m8 offset-m2 l8 offset-l2">
                {{#loisirs}}
                <section id="{{id}}" class="section scrollspy">
                    <h1>{{name}}</h1>
                    {{#content}}
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            {{{img}}}
                        </div>
                        <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4">{{name}}<i class="mdi-content-add right"></i></span>
                        </div>
                        <div class="card-reveal z-depth-3">
                            <span class="card-title grey-text text-darken-4">{{name}} <i class="mdi-navigation-close right"></i></span>
                            {{{description}}}
                        </div>
                    </div>
                    {{/content}}
                </section>
                {{/loisirs}}
            </div>
            <div class="col hide-on-small-only s12 m2 l1">
                <div style="height: 1px;">
                    <ul class="section table-of-contents pinned" style="top: 0px;">
                        {{#loisirs}}
                        <li><a href="#{{id}}" class="">{{name}}</a></li>
                        {{/loisirs}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{{>bottom}}